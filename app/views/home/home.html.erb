<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="post_form">
        <%= render 'shared/post_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>ツイート</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="container">
  <div class="main-image">
    <h1 class="title-logo">Mini Tweet</h1>
    <p class="text-content">xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx</p>
    <%= link_to "新規登録", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
</div>
<% end %>
