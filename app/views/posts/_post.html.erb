<li class="user-tweet row" id="post-<%= post.id %>">
  <div class="user-info col-4">
    <div class="user-icon">
      <img src="<%= "../images/sample_icon.jpg" %>">
    </div>
    <div class="user text-center"><b><%= link_to post.user.name, post.user %></b></div>
  </div>
  <div class="content col-5">
    <div class="says">
      <p><%= post.content %></p>
      <%= image_tag post.picture.url if post.picture? %>
    </div>
    <%= time_ago_in_words(post.created_at) %>前の投稿
    <% if current_user?(post.user) %>
      <p><%= link_to "削除", post, method: :delete,
                           data: { confirm: "本当に削除しますか?" } %></p>
    <% end %>

  </div>
</li>
