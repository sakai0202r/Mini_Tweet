<header class="navbar navbar-fixed-top">
  <div class="container">
    <%= link_to "Mini Tweet", root_path, id: "logo" %>
    <nav class="header-menus">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Mini Tweetとは", about_path %></li>
        <% if logged_in? %>
          <li><%= link_to "ユーザー一覧", users_path %></li>
          <li>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              アカウント <b class="caret"></b>
            </a>
            <ul class="dropdown-menu data-toggle="dropdown" data display="static"">
              <li><%= link_to "ツイート", current_user %></li>
              <li><%= link_to "ユーザー情報を変更", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
          <% else %>
            <li><%= link_to "ログイン", login_path %></li>
          <% end %>
      </ul>
    </nav>
  </div>
</header>
