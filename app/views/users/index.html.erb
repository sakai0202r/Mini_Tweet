<% provide(:title, 'ユーザー一覧') %>
<div class="text-center">
  <h1 class="title-logo">ユーザー一覧</h1>

  <ul class="users">
    <% @users.each do |user| %>
      <li>
        <%= link_to user.name, user %>
        <% if current_user && current_user?(user) %>
      | <%= link_to "delete", user, method: :delete,
                                    data: { confirm: "本当に削除しますか?" } %>
    <% end %>
      </li>
    <% end %>
  </ul>

</div>
