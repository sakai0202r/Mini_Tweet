<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.name %></h1>
      <span><%= link_to "ユーザーを表示", @user %></span>
      <span><%= @user.posts.count %><b>ツイート</b> </span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      </div>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
    <ul class="users follow">
      <% @users.each do |user| %>
        <li>
          <%= link_to user.name, user %>
        </li>
      <% end %>
    </ul>
    <% end %>
  </div>
</div>
